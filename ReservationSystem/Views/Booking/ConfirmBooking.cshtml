@model  int
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ConfirmBooking</title>
    <link href="~/Content/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/assets/css/style.css" rel="stylesheet" />
</head>
<body>
    <div>
        <section>
            <div class="main-content">

                <div class="container">
                    <div class="row">
                        <div class="col-md-3"></div>
                        <div class="col-md-6 text-center">
                            <div style="width: 90%; margin: 100px 0px; padding: 4% 5%; float: left; font-size: 14px; text-align: left; background: #b5ebff; text-align: center; border: 1px solid #0035bc; border-radius: 6px;">
                                <form id="appointment_form" name="appointment_form" class="mt-30" method="post">  
                                    <div class="col-sm-12">
                                        <div class="form-group mb-10">
                                            <h3 id="oneway_msg" style="text-transform: uppercase;">Please press the button</h3>
                                            <!--<h3>YOUR FARE IS: 300.00€</h3> -->
                                        </div>
                                        <input name="tour" class="form-control" type="hidden" value="Customer Conformed">
                                    </div>
                                    <div class="form-group mb-0 mt-20">
                                        <a href="@Url.Action("ConfirmBookingDetails","Booking",new {id=Model})">
                                            <button type="button" class="btn btn-dark btn-theme-colored"
                                                    data-loading-text="Please wait...">
                                                CONFORM TOUR
                                            </button>
                                        </a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>
</html>
